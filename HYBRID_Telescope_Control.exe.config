<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>

  <!-- Logging Configuration - Trace to file and DebugView -->
  <system.diagnostics>
    <trace autoflush="true" indentsize="4">
      <listeners>
        <!-- File listener - writes to HYBRID_Telescope_Control.log -->
        <add name="fileListener" 
             type="System.Diagnostics.TextWriterTraceListener" 
             initializeData="HYBRID_Telescope_Control.log" />
        <!-- Console listener - writes to console if available -->
        <add name="consoleListener" 
             type="System.Diagnostics.ConsoleTraceListener" />
        <!-- Default listener - writes to DebugView -->
        <remove name="Default" />
        <add name="Default" 
             type="System.Diagnostics.DefaultTraceListener" />
      </listeners>
    </trace>
    <switches>
      <add name="GeneralSwitch" value="Verbose" />
    </switches>
  </system.diagnostics>

  <!-- Assembly Binding -->
  <runtime>
    <!-- Enable strong-named assemblies -->
    <loadFromRemoteSources enabled="false" />
    <!-- Binding redirects for NuGet packages -->
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <!-- Redirect all versions to 13.0.0.0 (the actual assembly version in the DLL) -->
        <bindingRedirect oldVersion="0.0.0.0-65535.65535.65535.65535" newVersion="13.0.0.0" />
      </dependentAssembly>
      <!-- System.Net.Http is included in .NET Framework 4.8, no binding redirect needed -->
    </assemblyBinding>
  </runtime>
</configuration>
